<?xml version="1.0" encoding="utf-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
        id="com.example.hello"
        version="0.7.0">

  <name>CustomCode</name>

  <engines>
    <engine name="cordova" version=">=3.4.0"/>
  </engines>

  <asset src="www/hello.js" target="js/hello.js"/>

  <js-module src="www/hello.js" name="hello">
    <clobbers target="hello" />
  </js-module>

  <platform name="android">

    <config-file target="res/xml/config.xml" parent="/*">
      <feature name="CustomCode">
        <param name="android-package" value="com.example.plugin.CustomCode"/>
      </feature>
    </config-file>

    <source-file src="src/android/CustomCode.java" target-dir="src/com/example/plugin/"/>
  </platform>
</plugin>
